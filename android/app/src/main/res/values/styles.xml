<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="list_group_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#B8B8B8</item>
        <item name="android:background">#20D8D8D8</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/app.main.list_item.padding_sml</item>
        <item name="android:paddingBottom">@dimen/app.main.list_item.padding_sml</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="list_item_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@drawable/text_view_button</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="list_item_title.sub">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">6pt</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="list_item_switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:enabled">false</item>
        <item name="android:text">@string/emptyString</item>
    </style>

    <style name="list_item_divide">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>